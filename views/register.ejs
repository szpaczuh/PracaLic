<!doctype html>
<html>

<head>
    <title>Register page</title>
    <link href="../css/register.css" rel="stylesheet" type="text/css"/>
    <meta charset="UTF-8">
     <% include ./partials/notlogged.ejs %>
    <link href="../css/courseJumbtron.css" rel="stylesheet" type="text/css"/>
</head>

<body class="container">
    <header>
        <% include ./partials/headIndex.ejs %>
    </header>
    <div class="jumbotron">
<h2>Zarejestruj</h2>
        <br>
<% if(message.length > 0) { %>
<!-- bajerek dla ejsa, ogolnie jak bedzie error w loginie to tutaj pojdzie render -->
<div>
    <%= message %>
</div>
<% } %>

<form action="/register" method="post" name="register-form">
    <label>Kim jestes?</label>
    <div>
        
        <select name="role">
            <option value="student">Uczeń</option>
            <option value="teacher">Nauczyciel</option>
        </select>
    </div>
    <br>
    <label>Email</label>
    <div>
        
        <input type="email" name="email">
    </div>
    <br>
    <label>Password</label>
    <div>
        
        <input type="password" name="password">
    </div>
    <br>
    <button type="submit">Register</button>
</form>
<br>
<p>Masz już konto? <a href="/login">Zaloguj</a></p>
        </div>
</body>
<footer>
    <% include ./partials/footer.ejs %>
</footer>

</html>